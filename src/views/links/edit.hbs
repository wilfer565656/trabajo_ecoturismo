<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{links.id}}" method="POST">

                        <div class="form-group m-2">
                            <input type="text" value="{{links.title}}" class="form-control" name="title" placeholder="tittle" autofocus>
                        </div>

                        <div class="form-group m-2">
                            <input type="url"  value="{{links.url}}"  class="form-control" name="url" placeholder="url...." >
                        </div>
                        <div class="form-group m-2">
                            <textarea name="descripcion"  rows="2"  class="form-control" placeholder="description">{{links.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success m-2 " >
                                guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>